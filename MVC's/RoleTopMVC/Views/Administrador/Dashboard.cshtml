@model RoleTopMVC.ViewModels.DashboardViewModel
<main>
        <h2>Dashboard</h2>
        <section id="status-cadstros">
            <h3>Status dos eventos</h3>
            <br />
            <div id="painel">
                <div class="box-status-eventos aprovados">
                    <h4>Aprovados</h4>
                    <p>@Model.EventosAprovados</p>
                </div>
                <div class="box-status-eventos pendentes">
                    <h4>Pendentes</h4>
                    <p>@Model.EventosPendentes</p>
                </div>
                <div class="box-status-eventos reprovados">
                    <h4>Reprovados</h4>
                    <p>@Model.EventosReprovados</p>
                </div>
            </div>
        </section>

        <br />

        <section id="lista-eventos">
            <h3>Lista de eventos</h3>
            <table>
                <thead>
                    <tr>
                        <th rowspan="2">Nome</th>
                        <th rowspan="2">Email</th>
                        <th rowspan="2">Telefone</th>
                        <th rowspan="2">Data</th>
                        <th rowspan="2">Hora</th>
                        <th rowspan="2">Tipo</th>
                        <th rowspan="2">Adicional</th>
                        <th rowspan="2">Descrição</th>
                        <th colspan="2" rowspan="2">Aprovar</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <td colspan="10">
                            <p>Eventos atualizados em @DateTime.Now</p>
                        </td>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach(var evento in Model.Eventos)
                    {
                        <tr>
                            <td>@evento.Cliente.Nome</td>
                            <td>@evento.Cliente.Email</td>
                            <td>@evento.Cliente.Telefone</td>
                            <td>@evento.DataDoEvento.Nome</td>
                            <td>@evento.Hora.Nome</td>
                            <td>@evento.TipoEvento.Nome</td>
                            <td>@evento.ServicosAdicionais.Nome</td>
                            <td>@evento.Descricao.Nome</td>

                            <td><a href='@Url.Action("Aprovar", "CadastroEvento", new {id = @evento.Id})'><i class="fas fa-check"></i></a></td>
                            <td><a href='@Url.Action("Reprovar", "CadastroEvento", new {id = @evento.Id})'><i class="fas fa-times"></i></a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </section>

    </main>